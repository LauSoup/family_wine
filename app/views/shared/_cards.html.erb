<div class="container">
  <div class="cardsgrid">
    <% @wines.each do |wine| %>

      <article class="cardcusto">
        <div class="thumb" style="background-image: url('<%= cl_image_path wine.photo.key, crop: :scale if wine.photo.attached? %>');"> 
        </div>
        <div class="infos">
            <h2 class="title"> <%= wine.name %> </h2>
            <h3 class="date"> <%= wine.region.region_name %> </h3>
            <h3 class="seats"> <%= wine.price.price_fork %> </h3>
            <p class="txt"> <%= wine.description %> </p>
            <h3 class="details">ajouter en favoris</h3>
            <span class="flag"><%= image_tag "#{wine.country}_flag.png" %></span>
        </div>
      </article>

    <% end %>

  </div>

</div>
