<div class="container">
  <div class="row-forms">
    <div class="column-forms">

      <%= form_for(@wine) do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %>
        <%= f.label :description %>
        <%= f.text_field :description %>
        <%= f.label :country %>
        <%= select_tag(:country, options_for_select(Wine::COUNTRIES)) %>
        <%= f.label :price %>
        <%= f.text_field :price %>
        <div class="form-actions">
          <%= f.button :submit %>
        </div>
      <% end %>

    </div>
  </div>
</div>